


<% if current_user %>

  <h5>User: <%= current_user.email %></h5>
  <div id="<%= dom_id pin %>">
    <p>
      <strong>Title:</strong>
      <%= pin.title %>
    </p>
    <%= pin.body %>
    <br>
    <%#= image_tag(pin.image, style:"width:150px; height:auto") %>
    <hr>
    <% pin.pictures.each do |picture| %>
      <%= image_tag(picture, style:"width:150px; height:auto") %>
    <% end %>
  </div>
<% else %>
  <h1>please login</h1>

<% end %>
